<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipPloggingEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:paddingLeft="13dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back" />

        <!-- 플로깅 행사 텍스트 -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingTop="14dp"
            android:text="플로깅 행사"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:id="@+id/tip_view3"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plogging_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="플로깅 행사"
                android:textColor="@color/green_700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plogging_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:text="플로깅 행사 외에 마라톤, 걷기 대회와 같은 행사도 소개합니다."
                android:textColor="@color/green_2" />

            <Button
                android:id="@+id/tip_event01_btn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/green_2"
                android:drawableLeft="@drawable/event1"
                android:text="거리정화 플로깅\n\n위치: 서울 강남\n일시: 23.01.28." />

            <Button
                android:id="@+id/tip_event02_btn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/green_2"
                android:drawableLeft="@drawable/event2"
                android:text="2023 챌린지 레이스\n\n위치: 서울 여의도\n일시: 23.02.26." />

            <Button
                android:id="@+id/tip_event03_btn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/green_2"
                android:drawableLeft="@drawable/event3"
                android:text="경기국제하프\n마라톤대회\n\n위치: 경기도 수원시\n일시: 23.02.26." />

            <Button
                android:id="@+id/tip_event04_btn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/green_2"
                android:drawableLeft="@drawable/event4"
                android:text="제20회 태화강 \n국제 마라톤 대회\n\n위치: 울산 중구\n일시: 23.03.25" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>