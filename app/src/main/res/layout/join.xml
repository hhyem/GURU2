<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 로고 부분 -->
        <ImageView
            android:layout_width="179dp"
            android:layout_height="171dp"
            android:layout_marginStart="123dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="28dp"
            app:srcCompat="@drawable/logo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/drawable_left_img_customise_plant" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="에코런 시작하기"
                android:textSize="40px"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/drawable_left_img_customise_plant" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="30px"
            android:text="시작하기 전 이용약관과 개인정보 처리방침에 동의해 주세요." />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- 이용약관 동의 부분 -->
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12dp"
                android:text="이용약관 동의 (필수)" />

            <!-- 이용약관 확인 부분 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clause"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_marginLeft="43dp"
                android:background="#00ff0000"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="@string/underlined_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- 개인정보 처리방침 동의 부분 -->
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="12dp"
                android:text="개인정보 처리방침 동의 (필수)" />

            <!-- 개인정보 처리방침 약관 확인 부분 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clause2"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_marginLeft="43dp"
                android:background="#00ff0000"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="@string/underlined_button" />

        </LinearLayout>



        <!-- 구글 버튼 부분 -->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp">
        </com.google.android.gms.common.SignInButton>

    </LinearLayout>
</layout>